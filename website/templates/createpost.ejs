  <script>
    document.addEventListener('DOMContentLoaded', function() {
      
      function validateForm() {
       
        var modelInput = document.getElementById('Model');
        var conditionInput = document.getElementById('Condition');
        var priceInput = document.getElementById('Price');
        var descriptionInput = document.getElementById('Description');
        var locationInput = document.getElementById('Location');
  
       
        var modelValue = modelInput.value.trim();
        var conditionValue = conditionInput.value.trim();
        var priceValue = priceInput.value.trim();
        var descriptionValue = descriptionInput.value.trim();
        var locationValue = locationInput.value.trim();
  
        
        if (modelValue === '' || conditionValue === '' || priceValue === '' || descriptionValue === '' || locationValue === '') {
          alert('Please fill out all fields.');
          return false;
        }
  
       
        if (/^\d+$/.test(modelValue) || /^\d+$/.test(conditionValue) || /^\d+$/.test(descriptionValue) || /^\d+$/.test(locationValue)) {
          alert('Cannot accept number inputs.');
          return false;
        }
  
        
        if (!/^\d+$/.test(priceValue)) {
          alert('Price can only accept number inputs.');
          return false;
        }
  
        
        return true;
      }
  
      
      document.getElementById('myForm').addEventListener('submit', function(event) {
       
        if (!validateForm()) {
          event.preventDefault();
        }
      });
    });
  </script>
  
