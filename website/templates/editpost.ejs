            <div class="card">
              <div class="card-body pt-3">
                <!-- Bordered Tabs -->
                
                <div class="tab-content pt-2">
  
                  
  
                  <div class="tab-pane fade profile-edit pt-3 active show" id="profile-edit" role="tabpanel">
  
                    <!-- Profile Edit Form -->
                    <form action="/edit-post/<%= post.id %>" class="needs-validation" method="post" enctype="multipart/form-data" id="myForm" novalidate>
                        <!-- Input for Cycle Image -->
                        <label for="image">Cycle Image:</label>
                        <img src="/assets/img/<%= post.Img %>">
                        <input type="file" id="image" name="image" src="<%= post.Img %>" accept="image/*">
                        <!-- Add a hidden input for post ID if you are editing an existing post -->
                        <!-- <input type="hidden" name="postId" value="<%= post._id %>"> -->
                        <div class="invalid-feedback">Please provide an image!</div>
                        
                        <!-- Input for Model -->
                        <div class="row mb-3">
                            <label for="Model" class="col-md-4 col-lg-3 col-form-label">Model</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Model" type="text" class="form-control" id="Model" pattern="^[^\s\d].*$" title="Input cannot be blank or contain only spaces" value="<%= post.Model %>" required>
                                <div class="invalid-feedback">Please provide Model name</div>
                            </div>
                        </div>
                        
                        <!-- Input for Condition -->
                        <div class="row mb-3">
                            <label for="Condition" class="col-md-4 col-lg-3 col-form-label">Condition</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Condition" type="text" class="form-control" id="Condition" pattern="^[^\s\d].*$" title="Input cannot be blank or contain only spaces" value="<%= post.Condition %>" required>
                                <div class="invalid-feedback">Please provide proper Condition</div>
                            </div>
                        </div>
                        
                        <!-- Input for Price -->
                        <div class="row mb-3">
                            <label for="Price" class="col-md-4 col-lg-3 col-form-label">Price</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Price" type="tel" class="form-control" id="Price" pattern="^\S.*$" title="Input cannot be blank or contain only spaces" value="<%= post.Price %>" required>
                                <div class="invalid-feedback">Please provide Price</div>
                            </div>
                        </div>
                        
                        <!-- Input for Description -->
                        <div class="row mb-3">
                            <label for="Description" class="col-md-4 col-lg-3 col-form-label">Description</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Description" type="text" class="form-control" id="Description" pattern="^[^\s\d].*$" title="Input cannot be blank or contain only spaces" value="<%= post.Description %>" required>
                                <div class="invalid-feedback">Please provide proper Description</div>
                            </div>
                        </div>
                        
                        <!-- Input for Location -->
                        <div class="row mb-3">
                            <label for="Location" class="col-md-4 col-lg-3 col-form-label">Location</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Location" type="text" class="form-control" id="Location" pattern="^[^\s\d].*$" title="Input cannot be blank or contain only spaces" value="<%= post.Location %>" required>
                                <div class="invalid-feedback">Please provide proper Location</div>
                            </div>
                        </div><br>
                        
                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Update Post</button>
                        </div>
                    </form>                    
  
