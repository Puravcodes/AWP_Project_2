    <% if (messages.error) { %>
      <div id="flash-message" class="alert alert-danger text-center">
          <%= messages.error %>
      </div>
  <% } %>

  <% if (messages.success) { %>
    <div id="flash-success" class="alert alert-danger text-center">
        <%= messages.success %>
    </div>
<% } %>

  <script>
    window.onload = function() {
        <% if(messages.error && messages.error.length > 0) { %>
            setTimeout(function() {
                var flashMessage = document.getElementById('flash-message');
                if (flashMessage) {
                    flashMessage.parentNode.removeChild(flashMessage);
                }
            }, 5000); 
        <% } %>

        <% if(messages.success && messages.success.length > 0) { %>
            setTimeout(function() {
                var flashMessage = document.getElementById('flash-success');
                if (flashMessage) {
                    flashMessage.parentNode.removeChild(flashMessage);
                }
            }, 5000); 
        <% } %>
    };
</script>

