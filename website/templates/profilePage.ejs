  <script>
function deletePost(PID) {
  fetch(`/post/${PID}`, {
    method: 'DELETE'
  })
  .then(response => {
    if (response.ok) {
      console.log('Post deleted successfully');
      location.reload();
    } else {
      console.error('Failed to delete post');
    }
  })
  .catch(error => {
    console.error('Error deleting post:', error);
  });
}

